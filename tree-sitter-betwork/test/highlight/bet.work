// Basic dir statement
//--------------------
@dir("hello")
// <- keyword
//   ^ string

// Dir statement with member access
//---------------------------------
@dir(hello.world)
// <- keyword
//   ^ variable
//         ^ variable

// Basic var statement
//--------------------
my_var :: "hello"
//^ variable.constant
//      ^ operator
//         ^ string

// Var statement with number
//--------------------------
my_var := 123
// ^ variable
//     ^ operator
//      ^ operator
//         ^ number

// Const statement with number
//--------------------------
my_var :: 123
// ^ variable.constant
//      ^ operator
//         ^ number

// Comment
//--------
// this is a comment
// ^ comment

// Multiple statements
//--------------------
@dir("hello")
// <- keyword
//   ^ string

my_var: number: 123
//^ variable.constant
//    ^ operator
//      ^^^^^^ type
//            ^ operator
//              ^ number

my_var: my.number: 123
//^ variable.constant
//      ^^ variable
//    ^ operator
//         ^^^^^^ type
//        ^ operator
//                 ^^^ number

my_var: my.other.number: 123
//^ variable.constant
//      ^^ variable
//         ^^^^^ variable
//    ^ operator
//               ^^^^^^ type
//        ^ operator
//              ^ operator
//                       ^^^ number

// this is a comment
// ^ comment
