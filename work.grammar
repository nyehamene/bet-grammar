literal       = @import("util/literals.grammar");
//
Work          = { stmt | comment };
stmt          = ( dir | const ) sep;
dir           = "@dir" "(" expr ")";
const         = ident ":" [ member_access ] ":" expr;
expr          = literal.Expr;
ident         = literal.ident;
member_access = literal.member_access;
sep           = literal.Separator;
comment       = literal.CommentLine;
